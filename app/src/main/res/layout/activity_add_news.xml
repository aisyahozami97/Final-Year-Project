<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNews">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/add_news_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="CREATE EVENT"/>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d0d0d2"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp">

                    <ImageView
                        android:id="@+id/imageNews"
                        android:layout_width="match_parent"
                        android:layout_height="158dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:background="#FCFAFA"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/camera"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="right|bottom"
                        android:layout_marginBottom="24dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/btn_addimage"
                        tools:ignore="VectorDrawableCompat"/>

                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView

                        android:layout_width="113dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Event Name :  "
                        android:textSize="13dp"
                        android:layout_marginTop="7dp"/>

                    <EditText
                        android:id="@+id/news_name"
                        android:layout_width="240dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#ffffff"
                        android:drawableLeft="@drawable/btn_edit"
                        android:textSize="13dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:hint="Enter event name..."
                        android:padding="8dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView

                        android:layout_width="113dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Description :  "
                        android:textSize="13dp"
                        android:layout_marginTop="7dp"/>

                    <EditText
                        android:id="@+id/news_desc"
                        android:layout_width="240dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#ffffff"
                        android:drawableLeft="@drawable/btn_edit"
                        android:textSize="13dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:hint="Enter event description..."
                        android:padding="8dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView

                        android:layout_width="113dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Event Location :  "
                        android:textSize="13dp"
                        android:layout_marginTop="7dp"/>

                    <EditText
                        android:id="@+id/news_location"
                        android:layout_width="240dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#ffffff"
                        android:drawableLeft="@drawable/btn_edit"
                        android:textSize="13dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:hint="Enter event location..."
                        android:padding="8dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView

                        android:layout_width="113dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Event Location :  "
                        android:textSize="13dp"
                        android:layout_marginTop="7dp"/>

                    <TextView
                        android:id="@+id/newsDate"
                        android:layout_width="240dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#ffffff"
                        android:drawableLeft="@drawable/btn_edit"
                        android:textSize="13dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:hint="  Select Date"
                        android:padding="8dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView

                        android:layout_width="113dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Event Time :  "
                        android:textSize="13dp"
                        android:layout_marginTop="7dp"/>

                    <Spinner
                        android:id="@+id/spinnerNewsTime"
                        android:layout_width="240dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#ffffff"
                        android:drawableLeft="@drawable/btn_edit"
                        android:textSize="10dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:hint="  Select Date"
                        android:padding="8dp"
                        android:entries="@array/select_time"
                        android:prompt="@string/select_time" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView

                        android:layout_width="113dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Volunteer No :  "
                        android:textSize="13dp"
                        android:layout_marginTop="7dp"/>

                    <Spinner
                        android:id="@+id/numVolunteer"
                        android:layout_width="240dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#ffffff"
                        android:drawableLeft="@drawable/btn_edit"
                        android:textSize="10dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:hint="  Select Date"
                        android:padding="8dp"
                        android:entries="@array/total_volunteer"
                        android:prompt="@string/select_volunteer" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/currentVolunteer"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:text="   0"
                    android:visibility="gone"
                    />

            </LinearLayout>


            <Button
                android:id="@+id/createNews"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorStart"
                android:text="CREATE EVENT"
                android:textColor="#ffff" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>