<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5A8F8"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageReceipt"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#FCFAFA"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/poTrackingNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:padding="5dp"
                android:text="Order Id"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView

                android:layout_width="113dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:text="FirstName             :  "
                android:textSize="10dp" />

            <TextView

                android:id="@+id/poFnamee"
                android:layout_width="113dp"
                android:layout_height="20dp"
                android:layout_marginLeft="110dp"
                android:hint="100"
                android:textSize="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView

                android:layout_width="113dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:text="Order Status            :"
                android:textSize="10dp" />

            <TextView

                android:id="@+id/poOrderStatus"
                android:layout_width="113dp"
                android:layout_height="20dp"
                android:layout_marginLeft="110dp"
                android:hint="To Pay / Paid "
                android:textSize="10dp" />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView

                android:layout_width="113dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:text="Order Date     :  "
                android:textSize="10dp" />

            <TextView

                android:id="@+id/poDate"
                android:layout_width="113dp"
                android:layout_height="20dp"
                android:layout_marginLeft="110dp"
                android:hint="100"
                android:textSize="10dp" />


            <ImageView
                android:id="@+id/btnAccept"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="1dp"
                android:visibility="visible"
                app:srcCompat="@drawable/accept2" />

            <ImageView
                android:id="@+id/btnReject"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="right"
                android:layout_marginLeft="280dp"
                android:visibility="visible"
                app:srcCompat="@drawable/reject" />

        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>

</androidx.cardview.widget.CardView>