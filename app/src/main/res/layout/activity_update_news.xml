<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".UpdateNews">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/update_news_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="UPDATE EVENT">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d0d0d2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="349dp"
                android:layout_height="99dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#FCFAFA"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView

                    android:layout_width="113dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Event Name :  "
                    android:textSize="13dp"
                    android:layout_marginTop="7dp"/>

                <EditText
                    android:id="@+id/txtNewsName"
                    android:layout_width="240dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/btn_edit"
                    android:textSize="13dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Enter event name..."
                    android:padding="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView

                    android:layout_width="113dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Description :  "
                    android:textSize="13dp"
                    android:layout_marginTop="7dp"/>

                <EditText
                    android:id="@+id/txtNews"
                    android:layout_width="240dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/btn_edit"
                    android:textSize="13dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Enter the description..."
                    android:padding="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView

                    android:layout_width="113dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Event Location :  "
                    android:textSize="13dp"
                    android:layout_marginTop="7dp"/>

                <EditText
                    android:id="@+id/txtNewsLocation"
                    android:layout_width="240dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/btn_edit"
                    android:textSize="13dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Enter event location..."
                    android:padding="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView

                    android:layout_width="113dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Event Date :  "
                    android:textSize="13dp"
                    android:layout_marginTop="7dp"/>

                <EditText
                    android:id="@+id/newsDate"
                    android:layout_width="240dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/btn_edit"
                    android:textSize="13dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="  Select Date"
                    android:padding="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView

                    android:layout_width="113dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Event Time :  "
                    android:textSize="13dp"
                    android:layout_marginTop="7dp"/>

                <Spinner
                    android:id="@+id/spinnerNewsTime"
                    android:layout_width="240dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/btn_edit"
                    android:textSize="13dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="  Select Date"
                    android:padding="8dp"
                    android:entries="@array/select_time"
                    android:prompt="@string/select_time" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView

                    android:layout_width="113dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Volunteer No :  "
                    android:textSize="13dp"
                    android:layout_marginTop="7dp"/>

                <Spinner
                    android:id="@+id/numVolunteer"
                    android:layout_width="240dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/btn_edit"
                    android:textSize="13dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="  Select Date"
                    android:padding="8dp"
                    android:entries="@array/total_volunteer"
                    android:prompt="@string/select_volunteer" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnUpdateNews"
                    android:layout_width="114dp"
                    android:layout_height="31dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="5dp"
                    android:layout_toStartOf="@+id/btn_listVolunteer"
                    android:background="@color/colorStart"
                    android:text="UPDATE"
                    android:textColor="#ffff" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="114dp"
                    android:layout_height="31dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorStart"
                    android:gravity="center"
                    android:text="CANCEL"
                    android:textColor="#ffff" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>