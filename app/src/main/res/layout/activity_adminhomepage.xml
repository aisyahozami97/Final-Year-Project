<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".adminHomePage">

    <ImageView
        android:layout_width="331dp"
        android:layout_height="199dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-24dp"
        android:padding="10dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/btn_item"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="137dp"

        android:background="@color/colorwhiteOpacity"
        android:text="Preloved Item"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_purchasedOrder"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/btn_item"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="184dp"
        android:background="@color/colorwhiteOpacity"

        android:text="Purchase Order"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_news"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/btn_item"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="230dp"
        android:background="@color/colorwhiteOpacity"

        android:text="Event"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_listVolunteer"
        android:layout_width="245dp"
        android:layout_height="37dp"

        android:layout_below="@+id/btn_news"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:background="@color/colorwhiteOpacity"
        android:text="List Volunteer"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/btn_listAccount"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_below="@+id/btn_listVolunteer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:background="@color/colorwhiteOpacity"
        android:text="List User"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_profileAdmin"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_below="@+id/btn_listAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:background="@color/colorwhiteOpacity"
        android:text="Profile"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_signOut"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:layout_below="@+id/btn_profileAdmin"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="9dp"
        android:background="@color/colorwhiteOpacity"

        android:text="Sign Out"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</RelativeLayout>